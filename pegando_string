#include <stdio.h>
#include <string.h>
#include <stdlib.h>

int main(){
//arranjos
    char nome[256];
    int idade;
    
    printf("Ola qual seu nome ");
    scanf("%s", &nome);
    
    printf("Qual sua idade ");
    scanf("%d", &idade);
    
    printf("Nome: %s\n Idade: %d",nome,idade);
    
    printf("\nAguarde enquanto processamos seus dados...");
    
    printf("\nA primeira letra do seu nome e: %c\n ",nome[0]);//arranjo
    
    if(idade >= 18){
        printf("Voce e adulto");
    }else if(idade >= 12){
        printf("Voce e adolescente");
    }
    else{
        printf("Voce e crian√ßa");
    }
}